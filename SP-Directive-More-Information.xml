<payload>&lt;?xml version="1.0" encoding="UTF-8"?&gt;&lt;record_update table="sp_angular_provider"&gt;&lt;sp_angular_provider action="INSERT_OR_UPDATE"&gt;&lt;name&gt;spMoreInformation&lt;/name&gt;&lt;script&gt;&lt;![CDATA[function spMoreInformation() {
	return {
		transclude: true,
		restrict: 'E',
		scope: {
			label: "@",
		},
		replace: true,
		template:   '&lt;div style="padding:10px"&gt;'+
						'&lt;div style="padding: 10px 0; display:flex; align-items: center;"&gt;'+
							'&lt;i ng-click="expandHandler()", style="display:flex; justify-content:center; align-items:center;width: 20px;" class="fa" ng-class=\'{"fa-caret-down" : expanded, "fa-caret-right": !expanded}\'"&gt;&lt;/i&gt;'+
        '&lt;span&gt;{{label || "More Information"}}&lt;/span&gt;'+
      '&lt;/div&gt;'+
    
      '&lt;div ng-style="{\'display\': expanded ? \'\' : \'none\'} ", style="padding:7px;background-color: #efefef; border-radius:4px;"&gt;'+
       '&lt;ng-transclude&gt;&lt;/ng-transclude&gt;'+
      '&lt;/div&gt;'+
     '&lt;/div&gt;',
	
		controller: function($scope){
			  $scope.expanded = false;
			  $scope.expandHandler = function(){
        
				$scope.expanded = !$scope.expanded;
				};
		}
	}
}]]&gt;&lt;/script&gt;&lt;sys_class_name&gt;sp_angular_provider&lt;/sys_class_name&gt;&lt;sys_created_by&gt;admin&lt;/sys_created_by&gt;&lt;sys_created_on&gt;2018-12-10 20:35:14&lt;/sys_created_on&gt;&lt;sys_id&gt;d14d36ed4f1223005e4a8deba310c767&lt;/sys_id&gt;&lt;sys_mod_count&gt;4&lt;/sys_mod_count&gt;&lt;sys_name&gt;spMoreInformation&lt;/sys_name&gt;&lt;sys_package display_value="Global" source="global"&gt;global&lt;/sys_package&gt;&lt;sys_policy/&gt;&lt;sys_scope display_value="Global"&gt;global&lt;/sys_scope&gt;&lt;sys_update_name&gt;sp_angular_provider_d14d36ed4f1223005e4a8deba310c767&lt;/sys_update_name&gt;&lt;sys_updated_by&gt;admin&lt;/sys_updated_by&gt;&lt;sys_updated_on&gt;2018-12-11 03:33:35&lt;/sys_updated_on&gt;&lt;type&gt;directive&lt;/type&gt;&lt;/sp_angular_provider&gt;&lt;/record_update&gt;</payload>
